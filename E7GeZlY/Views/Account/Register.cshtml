@model E7GeZlY.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @style = "width:450px;padding-left:90px;margin-left:375px;margin-top:25px;background-color:cornflowerblue;padding-top:15px;padding-bottom:15px;border: groove;border-radius: 20px;" }))
{
    @Html.AntiForgeryToken()
    <h2 style="text-align:left;font-family:'Times New Roman', Times, serif">Create a new account</h2>
    <hr style="margin-left:-90px"/>
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group label-inputvalidation">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label mylabel" })
        <div class="col-md-10 inputvalidation">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group label-inputvalidation">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label mylabel" })
        <div class="col-md-10 inputvalidation">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group label-inputvalidation">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label mylabel" })
        <div class="col-md-10 inputvalidation">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group label-inputvalidation">
        @Html.LabelFor(m => m.UserType, new { @class = "col-md-2 control-label mylabel" })
        <div class="col-md-10 inputvalidation">
            @Html.DropDownList("UserType", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group label-inputvalidation">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label mylabel" })
        <div class="col-md-10 inputvalidation">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group label-inputvalidation">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label mylabel" })
        <div class="col-md-10 inputvalidation">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin-left:87px">
            <input type="submit" class="btn btn-success" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
