@model IEnumerable<E7GeZlY.Models.Hall>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Halls</h2>
<br />

<table class="table-bordered table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MyCategory.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HallName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.County)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MyCategory.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HallName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.County)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        
        <td>
            <img src=" ~/Images/@Html.DisplayFor(modelItem => item.Image)" class="thumbnail" width="120" height="120"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
